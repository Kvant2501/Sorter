<Window x:Class="PhotoSorterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PhotoSorterApp.ViewModels"
        xmlns:models="clr-namespace:PhotoSorterApp.Models"
        Title="PhotoSorter" Height="700" Width="900" FontFamily="Segoe UI">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Стиль для иконки ❓ -->
        <Style x:Key="HelpIconStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="?"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Cursor" Value="Help"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе" Click="About_Click"/>
                <MenuItem Header="Поддерживаемые форматы" Click="Formats_Click"/>
                <MenuItem Header="Полная справка" Click="FullHelp_Click"/>
            </MenuItem>
            <MenuItem Header="Тема">
                <MenuItem x:Name="ThemeLightMenu" Header="Светлая" IsCheckable="True" Checked="Theme_Checked"/>
                <MenuItem x:Name="ThemeDarkMenu" Header="Тёмная" IsCheckable="True" Checked="Theme_Checked"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1" Margin="10">
            <!-- Вкладка: Сортировка -->
            <TabItem Header="Сортировка">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Выбрать папку" Click="SelectFolder_Click" 
                            Width="150" HorizontalAlignment="Left" Margin="0,0,0,10"/>

                    <TextBox Grid.Row="1" Text="{Binding SortingOptions.SourceFolder}" 
                             Margin="0,0,0,10" Height="26" IsReadOnly="True"/>

                    <!-- Настройки с иконками ❓ -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                        <CheckBox Content="Рекурсивный поиск" IsChecked="{Binding SortingOptions.IsRecursive}" 
                                  Margin="0,0,10,0">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Обрабатывать все подпапки внутри выбранной папки.
                                    </TextBlock>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <TextBlock Style="{DynamicResource HelpIconStyle}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Обрабатывать все подпапки внутри выбранной папки.
                                    </TextBlock>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>

                        <CheckBox Content="Разбивать по месяцам" IsChecked="{Binding SortingOptions.SplitByMonth}" 
                                  Margin="20,0,10,0">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Создавать подпапки по месяцам (Год/Месяц).
                                    </TextBlock>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <TextBlock Style="{DynamicResource HelpIconStyle}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Создавать подпапки по месяцам (Год/Месяц).
                                    </TextBlock>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>

                        <CheckBox Content="Создать бэкап" IsChecked="{Binding SortingOptions.CreateBackup}" 
                                  Margin="20,0,10,0">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Перед сортировкой создать копию исходной папки.
                                    </TextBlock>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <TextBlock Style="{DynamicResource HelpIconStyle}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Перед сортировкой создать копию исходной папки.
                                    </TextBlock>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Grid.Row="3" Text="Тип файлов:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,25,0,10">
                        <RadioButton Content="Только фото" GroupName="FileType" 
                                     IsChecked="{Binding IsPhotosOnly}" 
                                     Checked="FileType_Checked" Tag="PhotosOnly" Margin="0,0,20,0"/>
                        <RadioButton Content="Только видео" GroupName="FileType" 
                                     IsChecked="{Binding IsVideosOnly}" 
                                     Checked="FileType_Checked" Tag="VideosOnly" Margin="0,0,20,0"/>
                        <RadioButton Content="Фото + видео" GroupName="FileType" 
                                     IsChecked="{Binding IsPhotosAndVideos}" 
                                     Checked="FileType_Checked" Tag="PhotosAndVideos" Margin="0,0,20,0"/>
                        <RadioButton Content="Все" GroupName="FileType" 
                                     IsChecked="{Binding IsAllSupported}" 
                                     Checked="FileType_Checked" Tag="AllSupported" Margin="0,0,20,0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="4" Text="Режим:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,25,0,10">
                        <RadioButton Content="Только сортировка" GroupName="Mode" 
                                     IsChecked="{Binding IsSortOnly}" Margin="0,0,20,0"/>
                        <RadioButton Content="Сортировка + дубликаты" GroupName="Mode" 
                                     IsChecked="{Binding IsSortAndDuplicates}" Margin="0,0,20,0"/>
                    </StackPanel>

                    <Button Grid.Row="5" Content="Старт" Click="StartProcess_Click" 
                            Width="80" Height="30" Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource TextOnPrimaryBrush}" 
                            FontSize="14" FontWeight="Bold" Margin="0,10,0,0"/>
                </Grid>
            </TabItem>

            <!-- Вкладка: Дубликаты -->
            <TabItem Header="Дубликаты">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Выбрать папку" Click="SelectDuplicatesFolder_Click" Width="150" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding DuplicatesSearchFolder}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Рекурсивно с подсказкой -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox Content="Рекурсивно" IsChecked="{Binding IsDuplicatesRecursive}" Margin="0,0,10,0">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Искать дубликаты во всех подпапках.
                                    </TextBlock>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <TextBlock Style="{DynamicResource HelpIconStyle}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Искать дубликаты во всех подпапках.
                                    </TextBlock>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <Button Grid.Row="2" Content="Найти дубликаты" Click="FindDuplicates_Click" Width="150" HorizontalAlignment="Left" Margin="0,20,0,0"/>
                </Grid>
            </TabItem>

            <!-- Вкладка: Очистка -->
            <TabItem Header="Очистка">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Выбрать папку" Click="SelectCleanupFolder_Click" Width="150" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding CleanupFolder}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Рекурсивно с подсказкой -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox Content="Рекурсивно" IsChecked="{Binding CleanupRecursive}" Margin="0,0,10,0">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Очищать все подпапки.
                                    </TextBlock>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <TextBlock Style="{DynamicResource HelpIconStyle}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Очищать все подпапки.
                                    </TextBlock>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox Content="Скриншоты" IsChecked="{Binding CleanupScreenshots}" Margin="0,0,20,0"/>
                        <CheckBox Content="Временные файлы" IsChecked="{Binding CleanupTempFiles}" Margin="0,0,20,0"/>
                        <CheckBox Content="Пустые файлы" IsChecked="{Binding CleanupEmptyFiles}" Margin="0,0,20,0"/>
                    </StackPanel>

                    <Button Grid.Row="3" Content="Старт очистки" Click="StartCleanup_Click" Width="150" HorizontalAlignment="Left" Margin="0,20,0,0"/>
                </Grid>
            </TabItem>

            <!-- Вкладка: Переименование -->
            <TabItem Header="Переименование">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Выбрать папку" Click="SelectRenameFolder_Click" Width="150" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding RenameFolder}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Рекурсивно с подсказкой -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox Content="Рекурсивно" IsChecked="{Binding IsRenameRecursive}" Margin="0,0,10,0">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Переименовывать файлы во всех подпапках.
                                    </TextBlock>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <TextBlock Style="{DynamicResource HelpIconStyle}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        Переименовывать файлы во всех подпапках.
                                    </TextBlock>
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </StackPanel>

                    <ComboBox Grid.Row="2" ItemsSource="{Binding RenameTemplates}" 
                              SelectedItem="{Binding SelectedRenameTemplate}"
                              Margin="0,10,0,0" MinWidth="300"/>

                    <TextBox Grid.Row="3" Text="{Binding RenamePattern, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,10,0,0" MinWidth="300" Height="26"/>

                    <WrapPanel Grid.Row="4" Margin="0,10,0,0">
                        <Button Content="Год" Tag="{}{year}" Click="InsertBlock_Click" Margin="2"/>
                        <Button Content="Месяц" Tag="{}{month}" Click="InsertBlock_Click" Margin="2"/>
                        <Button Content="День" Tag="{}{day}" Click="InsertBlock_Click" Margin="2"/>
                        <Button Content="Дата" Tag="{}{date}" Click="InsertBlock_Click" Margin="2"/>
                        <Button Content="Счётчик" Tag="{}{index}" Click="InsertBlock_Click" Margin="2"/>
                        <Button Content="Имя" Tag="{}{name}" Click="InsertBlock_Click" Margin="2"/>
                        <Button Content="Текст..." Click="InsertCustomText_Click" Margin="2"/>
                    </WrapPanel>

                    <TextBlock Grid.Row="5" Text="{Binding RenamePreview}" 
                               FontStyle="Italic" Foreground="{DynamicResource SubtleTextBrush}" Margin="0,10,0,0"
                               TextWrapping="Wrap"/>

                    <Button Grid.Row="6" Content="Применить" Click="ApplyRename_Click" 
                            Width="100" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                </Grid>
            </TabItem>

            <!-- Вкладка: Лог -->
            <TabItem Header="Лог">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Logger}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                        <TextBlock Text="{Binding Icon}" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Message}" Foreground="{Binding Color}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button Grid.Row="1" Content="Сохранить лог" Click="SaveLog_Click" 
                            Width="140" HorizontalAlignment="Right" Margin="0,10,0,0" Background="{DynamicResource PrimaryBrush}" Foreground="{DynamicResource TextOnPrimaryBrush}" FontWeight="Bold"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>