<Window x:Class="PhotoSorterApp.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод текста" Height="160" Width="380" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10" Background="{DynamicResource SurfaceBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptText" Grid.Row="0" Margin="0,0,0,8" TextWrapping="Wrap" Foreground="{DynamicResource TextBrush}"/>
        <TextBox x:Name="InputBox" Grid.Row="1" Margin="0,0,0,10" Height="26"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{DynamicResource SecondaryButton}" Content="Отмена" IsCancel="True" Width="90" Height="30" Margin="0,0,8,0"/>
            <Button Style="{DynamicResource PrimaryButton}" x:Name="OkButton" Content="ОК" IsDefault="True" Click="OkButton_Click" Width="90" Height="30"/>
        </StackPanel>
    </Grid>
</Window>