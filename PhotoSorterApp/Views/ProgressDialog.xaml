<Window x:Class="PhotoSorterApp.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выполняется операция" Height="180" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StatusTextBlock"
                   Text="Выполняется операция..."
                   FontSize="14"
                   FontWeight="Medium"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <ProgressBar Grid.Row="1"
                     IsIndeterminate="True"
                     Height="8"
                     Foreground="#0078D7"/>

        <Button Grid.Row="2"
                Content="Отменить"
                Click="CancelButton_Click"
                Width="100"
                Height="30"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Background="#FF5F5F"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>