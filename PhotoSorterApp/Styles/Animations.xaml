<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Simple fade animation for popups/cards -->
    <Storyboard x:Key="FadeIn">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25"/>
    </Storyboard>

    <Storyboard x:Key="FadeOut">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.25"/>
    </Storyboard>

    <!-- Button micro-interactions -->
    <Storyboard x:Key="ButtonPressDown">
        <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleX" To="0.98" Duration="0:0:0.06"/>
        <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleY" To="0.98" Duration="0:0:0.06"/>
        <DoubleAnimation Storyboard.TargetName="BtnRoot" Storyboard.TargetProperty="Opacity" To="0.92" Duration="0:0:0.06"/>
    </Storyboard>

    <Storyboard x:Key="ButtonPressUp">
        <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.10"/>
        <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.10"/>
        <DoubleAnimation Storyboard.TargetName="BtnRoot" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.10"/>
    </Storyboard>

    <Storyboard x:Key="ButtonHoverIn">
        <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleX" To="1.015" Duration="0:0:0.12"/>
        <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleY" To="1.015" Duration="0:0:0.12"/>
    </Storyboard>

    <Storyboard x:Key="ButtonHoverOut">
        <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.12"/>
        <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.12"/>
    </Storyboard>

</ResourceDictionary>